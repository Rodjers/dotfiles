# Override gtk theme
#
# theme = "Adwaita-dark"
# Override gtk icon theme
# IconTheme = "Adwaita"

Set Term = "kitty"

# Window Placer
#
placer {
  xorigin = 5;  # place the first window at X% from the left
    yorigin = 5;  # place the first window at X% from the top
    xstep = 5;    # step by X% of desktop horizontally
    ystep = 5;    # step by X% of desktop vertically
    children = true;
}

# Task Switcher
switcher {
  interval = 700;
  icons = true;
  labels = false;
  cols = 5;
}

function("SfwbarInit") {
#  Config "PopUp 'XVolumeWindow' { AutoClose = true }"
}


# Panel layout


layout ":center" {

  mirror = "*";
  layer = "top";
#  sensor = 300
#  monitor = "eDP-1"

# Uncomment the below section if you would like a pager
#  pager {
#    style = "pager"
#    rows = 1
#    preview = true
#  }


  taskbar {
    rows = 1;
    labels = false;
    icons = true;
    group = true;
    sort = true;

    action[RightClick] = Menu "winops";
    action[MiddleClick] = Close;
    action[Drag] = Focus;
  }

  include("volume.widget");

  style = "right";
  grid {
    style = "clockGrid"
    css = "* { padding-left: 5px; padding-right: 5px; }";
  #  action[0] = Function "XCalInit";
  #  action = Function "XCalPopUp";
    label {
      value = Time("%k:%M");
      loc(1,1);
    }
  }
}

#CSS
@define-color theme_text_color #cad3f5;
@define-color theme_bg_color #1e2030;
@define-color theme_fg_color #494d64;
@define-color theme_focus_color #5b6078;
@define-color theme_hover_color #363a4f	;
@define-color borders rgba(256,256,256,0.3);

window#sfwbar {
  -GtkWidget-direction: bottom;
  background-color: @theme_bg_color;
}
window#tasks {
  -GtkWidget-direction: bottom;
}

grid#layout {
  -GtkWidget-direction: right;
  min-height: 30px;
}

grid {
padding: 0px;
margin: 0px;
}

grid#clockGrid {
padding: 0px;
margin: 0px;
}

tooltip {
  background-color: @theme_bg_color;
}

image {
  min-width: 18px;
  min-height: 18px;
  box-shadow: none;
border: none;
        border-image: none;
        background-image: none;
background: none;
            -gtk-icon-shadow: none;
}

button {
  box-shadow: none;
  border-image: none;
  background-image: none;
border: none;
        border-radius: 0px;
background: none;
            outline-style: none;
}

menu {
  background-color: black;
border: 1px solid @borders;
padding: 3px;
}

menu arrow {
  background-color: rgba(0,0,0,0);
color: @theme_text_color;
}

menuitem {
color: @theme_text_color;
padding: 2px;
}

menu image {
  padding-right: 5px;
}

#hidden {
  -GtkWidget-visible: false;
}

button#taskbar_item image {
  min-width: 24px;
  min-height: 24px;
}

button#taskbar_item label {
padding: 0px 0px 0px 5px;
         -GtkWidget-hexpand: false;
}

button#taskbar_item {
margin: 0px 4px 0px 0px;
padding: 4px 4px 4px 4px;
         background-color: @theme_fg_color;
         -GtkWidget-hexpand: false;
}

button#taskbar_item.focused {
  background-color: @theme_focus_color;
}

button#taskbar_item:hover {
  background-color: @theme_hover_color;
}

button#tray_item {
padding: 0px 1px 0px 0px;
border: none;
margin: 0px;
        -GtkWidget-valign: center;
}

button#tray_item.passive {
  -GtkWidget-visible: false;
}

button#startmenu image,
  button#module image{
    -ScaleImage-color: @theme_text_color;
    -ScaleImage-symbolic: true;
  }

button#module,
  button#launcher,
  button#showdesktop,
  button#startmenu {
padding: 0px 3px 0px 3px;
border: none;
        -GtkWidget-valign: center;
  }

label#sway_lang {
  margin-left: 3px;
  margin-right: 5px;
}

label {
font: 12px Sans;
color: @theme_text_color;
       text-shadow: none;
}

* {
  -GtkWidget-vexpand: true;
}
