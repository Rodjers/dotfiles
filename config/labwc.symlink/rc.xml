<?xml version="1.0"?>

<!--
This is a very simple config file with many options missing. For a complete
set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <theme>
    <name>catppuccin-macchiato</name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <keyboard>
    <default />
    <!-- Use a different terminal emulator -->
    <keybind key="W-space">
      <action name="Execute" command="wofi --show drun" />
    </keybind>
    <keybind key="W-r">
      <action name="Execute" command="bemenu-run -l 20 -c -R 16 -W 0.5 --fn noto 24 --fb '#24273a' --ff '#cad3f5' --nb '#24273a' --nf '#cad3f5' --tb '#24273a' --hb '#24273a' --tf '#ed8796' --hf '#eed49f' --af '#cad3f5' --ab '#24273ar'" />
    </keybind>
    <keybind key="A-q">
      <action name="Execute" command="kitty" />
    </keybind>
    <keybind key="W-b">
      <action name="ToggleDecorations" />
    </keybind>
    <keybind key="W-m">
      <action name="Maximize"/>
    </keybind>
    <keybind key="W-g">
      <action name="Execute">
        <command>labwc --reconfigure</command>
      </action>
    </keybind>
    <keybind key="W-l">
      <action name="Execute">
        <command>swaylock -f</command>
      </action>
    </keybind>
    <keybind key="A-c">
      <action name="Execute">
        <command>gitle-calculator</command>
      </action>
    </keybind>
    <keybind key="W-S-left">
      <action name="MoveToOutput" direction="left" wrap="yes"/>
    </keybind>
    <keybind key="W-S-right">
      <action name="MoveToOutput" direction="right" wrap="yes"/>
    </keybind>
    <keybind key="W-S-h">
      <action name="MoveToOutput" direction="left" wrap="yes"/>
    </keybind>
    <keybind key="W-S-l">
      <action name="MoveToOutput" direction="right" wrap="yes"/>
    </keybind>
    <keybind key="XF86_AudioLowerVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ -5%" />
    </keybind>
    <keybind key="XF86_AudioRaiseVolume">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ +5%" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
      <keybind key="W-F4">
        <action name="None" />
      </keybind>
    </keyboard>

    <mouse>
      <default />
      <!-- Show a custom menu on desktop right click -->
      <context name="All">
        <mousebind button="A-Right" action="Press">
          <action name="ShowMenu" menu="root-menu" />
        </mousebind>
      </context>
    </mouse>

    <windowSwitcher show="yes" preview="yes" outlines="yes" allWorkspaces="no">
      <fields>
        <field content="icon" width="5%" />
        <field content="desktop_entry_name" width="30%" />
        <field content="custom" format="%I" width="65%" />
      </fields>
    </windowSwitcher>

    <windowRules>
      <windowRule identifier="*" serverDecoration="yes" />
      <windowRule identifier="google-chrome" serverDecoration="no"><action name="Maximize" /></windowRule>
      <windowRule identifier="brave-browser" serverDecoration="no"><action name="Maximize" /></windowRule>
      <windowRule identifier="org.qutebrowser.qutebrowser" serverDecoration="no"><action name="Maximize" /></windowRule>
      <windowRule identifier="kitty" serverDecoration="no"><action name="Maximize" /></windowRule>
      <windowRule identifier="com.mitchellh.ghostty" serverDecoration="no"><action name="Maximize" /></windowRule>
      <windowRule identifier="dev.zed.Zed" serverDecoration="no"><action name="Maximize" /></windowRule>
    </windowRules>
  </labwc_config>
